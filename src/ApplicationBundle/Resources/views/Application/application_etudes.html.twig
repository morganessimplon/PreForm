{% extends "::base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/menu.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
{% endblock %}
{% block title %}{{ parent() }} - Etudes{% endblock %}
{% block menu %}{% include ':default:menu.html.twig' %}{% endblock %}
{% block body %}
<div class="col-sm-9 col-md-10 affix-content">
    <div class="container new_application">
        <div class="page-header">
            <h3><span class="glyphicon glyphicon-user"></span> Etudes</h3>
        </div>
        {{ form_start(form_application, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form_application) }}
        {# etudes form #}
        <fieldset>
            <legend>Votre formation</legend>
                <div class="col-xs-6">
                    <div class="col-xs-12">
                        {{ form_label(form_application.niveauEtudes, "Niveau d'études", {'label_attr': {'class': 'col-xs-2 control-label'}}) }}
                        {{ form_errors(form_application.niveauEtudes) }}
                        <div class="col-xs-12">
                            {{ form_widget(form_application.niveauEtudes, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="col-xs-12">
                        {{ form_widget(form_application.diplomes) }}
                        {{ form_label(form_application.diplomes, "Diplôme obtenu", {'label_attr': {'class': 'col-xs-2 control-label'}}) }}
                        {{ form_errors(form_application.diplomes) }}
                        <div class="col-xs-12">
                            {{ form_widget(form_application.diplomes, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <a href="#" id="add_diplome" class="btn btn-default col-xs-4 col-xs-offset-2">Ajouter diplôme</a>
                    </div>
                </div>
            </fieldset>
        </div>
    <div class="col-xs-12">
        {{ form_widget(form_application) }}
        <a href={% if application.situationProfessionnelle == 'interim' %}
                    "{{ path('application_infos_complementaires', {'id': applicant.id}) }}">
                  {% else %}
                    "{{ path('application_situation_pro', {'id': applicant.id}) }}">
                  {% endif %}
        <button type="button" class="btn btn-default"><i class="glyphicon glyphicon-arrow-left"> Précédent</i></button></a>
        <button type="submit" class="btn btn-default">Suivant <i class="glyphicon glyphicon-arrow-right"></i></button>
    </div>
    {{ form_rest(form_application) }}
    {{ form_end(form_application) }}
</div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/etudes.js') }}"></script>
{% endblock %}